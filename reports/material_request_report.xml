<odoo>

  <!-- Report action to show: "book report" -->
  <record id="material_request_report" model="ir.actions.report">
    <field name="name">Material Request Report</field>
    <field name="model">material.request</field>
    <field name="report_type">qweb-html</field>
    <field name="binding_model_id" ref="model_material_request" />
    <field name="binding_type">report</field>
    <field name="report_name">material_request.material_request_report_template</field>
  </record>

  <!-- template use keywep -->
  <template id="material_request_report_template">
    <t t-call="web.html_container">
      <t t-call="web.external_layout">
        <t t-foreach="docs" t-as="rec">
          <h1>Material Request Report</h1>
          <h1>
            <t t-esc="rec.ref" />
          </h1>
        </t>
      </t>
    </t>
  </template>
</odoo>